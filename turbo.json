{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["DATABASE_URL"],
  "tasks": {
    "build": {
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "dependsOn": ["^build"]
    },
    "dev": {
      "env": [
        "DATABASE_URL"
      ],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": ["src/**"]
    },
    "clean": {
      "cache": false
    },
    "db:generate": {
      "inputs": ["prisma/**"],
      "cache": false
    },
    "db:push": {
      "cache": false
    }
  }
}
